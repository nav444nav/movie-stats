{
  "name": "movie-stats",
  "displayName": "Movie Stats",
  "description": "View top trending movies directly in VSCode",
  "version": "1.0.0",
  "publisher": "movie-stats",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:movieStatsView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "movie-stats",
          "title": "Movie Stats",
          "icon": "resources/movie-icon.svg"
        }
      ]
    },
    "views": {
      "movie-stats": [
        {
          "type": "webview",
          "id": "movieStatsView",
          "name": "Trending Movies"
        }
      ]
    },
    "commands": [
      {
        "command": "movieStats.refresh",
        "title": "Movie Stats: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "movieStats.show",
        "title": "Movie Stats: Show Trending Movies"
      }
    ],
    "configuration": {
      "title": "Movie Stats",
      "properties": {
        "movieStats.apiKey": {
          "type": "string",
          "default": "",
          "description": "Optional: Your TMDB API key for unlimited requests. Leave empty to use demo key."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.6.2"
  }
}
